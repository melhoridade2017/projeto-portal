<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="utf-8">
    <link id="page_favicon" href="/assets/img/favicon.png" rel="icon" type="image/x-icon">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Melhor Idade SA</title>
    <link href="/assets/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- APP STYLE -->
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/style_admin.css" rel="stylesheet">
  </head>
  <body>
    <header>
      <div id="menu_admin"></div>
    </header>
 

    <div class="container-fluid">
      <div class="row">

        <div class="col-xs-1 col-ms-1 col-md-1 col-lg-1">&nbsp;</div>

        <div class="col-xs-10 col-ms-10 col-md-10 col-lg-10">
          <h2>Submenu</h2>

          <div class="col-xs-12 col-ms-12 col-md-12 col-lg-12">&nbsp;</div>

          <a class="btn btn-primary btn-md" id="new" data-toggle="modal" href="#mNovo">Novo (+)</a>

          <div class="col-xs-12 col-ms-12 col-md-12 col-lg-12">&nbsp;</div>

          <!-- Modal -->
          <div id="mNovo" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Submenu - Novo</h4>
                </div>
                <div class="modal-body">
                  
                  <div class="form-group">
                    <label for="newtexto">Texto</label>
                    <input type="text" id="newtexto" class="form-control" placeholder="Alt">
                  </div>
                  <div class="form-group">
                    <label for="newurl">URL</label>
                    <input type="text" id="newurl" class="form-control" placeholder="URL">
                  </div>
                  <div class="form-group">
                    <label for="selmenu">Menu</label>
                    <input type="hidden" id="id_menu" value="0">
                    <select id="selmenu0" class="form-control" placeholder="Menu">
                    </select>
                  </div>  
                  
                  <button class="btn btn-primary" id="btNew">Salvar</button>                  

                </div>
                <div class="modal-footer">
                  <div class='resp'>&nbsp;</div>
                  <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
              </div>

            </div>
          </div>

          <!-- TABELA -->
          <table class="table table-hover" id="tbsubmenu">
            <thead>
              <tr>
                <th>Texto</th>
                <th>Url</th>
                <th>Menu</th>
                <th>Ação</th>
              </tr>
            </thead>
            <tbody>              
            </tbody>
          </table>
          <!-- FIM TABELA -->

        </div>

        <div class="col-xs-1 col-ms-1 col-md-1 col-lg-1">&nbsp;</div>
      </div>
  
    </div> 


  <footer>
	 <div id="footer"></div>
  </footer>
 
